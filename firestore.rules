
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to user list for login verification
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Secure other collections: only authenticated users can access
    // and they can only access data for their own location.
    match /locations/{locationId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Generic rule for other collections, requires authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
